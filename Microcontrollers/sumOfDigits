			AREA SOD,CODE,READONLY
SUM		RN	1
DIGIT	RN	2
QUO		RN	3
entry
			LDR R0,=123
			MOV SUM,#0
			MOV R4,#10
AGAIN	BL GETDIGIT
			ADD SUM,SUM,DIGIT
			CMP QUO,#0
			MOVNE R0,QUO
			BNE AGAIN
STOP	B STOP

GETDIGIT
						MOV QUO,#0
						MOV DIGIT,#0
SUBAGAIN		SUBS R0,R0,R4
						ADDPL QUO,QUO,#1
						BPL SUBAGAIN
						ADDMI DIGIT,R0,R4
						BX LR
				END
        
        ;0 errors
